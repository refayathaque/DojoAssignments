package com.refayathaque.greatnumbergame.controllers;

import java.io.IOException;
import java.util.Random;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

public class Index extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		RequestDispatcher view = request.getRequestDispatcher("/WEB-INF/views/index.jsp");
	    view.forward(request, response);
	}
	
	public int rndNum() {
		return new Random().nextInt(3) + 1;
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String res = "";
		HttpSession session = request.getSession();
		session.invalidate();
		
		int cl = Integer.parseInt(request.getParameter("number").trim());
		String sv = Integer.toString((Integer) session.getAttribute("num"));
			
		if(sv == null) {
			session.setAttribute("num", rndNum());
		} else {
			int tmp = Integer.parseInt(sv);
			if(tmp == cl) {
				res = "You win!";
				tmp = rndNum();
				session.setAttribute("num", tmp);
			} else if(tmp > cl) {
				res = "Too low!";
			} else {
				res = "Too high!";
			}
			
			session.setAttribute("res", res);
			
		}
		
		doGet(request, response);
	}

}
